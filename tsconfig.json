{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "esnext",
    "sourceMap": true,
    "jsx": "preserve",
    "lib": [
      "dom"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "config",
    "public"
  ]
}
